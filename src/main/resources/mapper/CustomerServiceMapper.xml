        user_key,
        handle_name,
        waybill_number ,
        content,
        contacts,
        phone,
        enclosure,
        receive_time ,
        end_time,
        receive_time_solt ,
        end_time_solt,
        type_id,
        type_name ,
        status,
        remarks,
        create_time
        from customer_service
        <where>
            <if test="status!=0">
                and status = #{status}
            </if>
            <if test="type!=0">
                and type_id = #{type}
            </if>
            <if test="waybillNumber!=null and waybillNumber!=''">
                and waybill_number = #{waybillNumber}
            </if>

            and handle_id =#{userId}
        </where>
        ORDER BY status ASC,create_time DESC
    </select>
</mapper>
